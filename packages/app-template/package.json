{
    "name": "@publicis-sapient/app-template",
    "version": "0.0.1",
    "description": "The application template for MFA using Single SPA",
    "keywords": [
        "microfrontend",
        "spa",
        "netlify",
        "lambda",
        "react",
        "redux",
        "storybook",
        "jest"
    ],
    "author": "nisheed.jagadish <nisheed.jagadish@loblaw.ca>",
    "homepage": "",
    "license": "ISC",
    "main": "src/client.js",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "lint": "eslint src --ext js --ext jsx",
        "format": "prettier --write \"./**\"",
        "test": "cross-env BABEL_ENV=test jest",
        "watch-tests": "cross-env BABEL_ENV=test jest --watch",
        "coverage": "cross-env BABEL_ENV=test jest --coverage",
        "build:client:dev": "webpack --config config/webpack.client.js --watch",
        "build:client:prod": "cross-env webpack --config config/webpack.client.js --mode production"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && concurrently yarn:test yarn:lint"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/plugin-transform-runtime": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-react": "^7.12.10",
        "@babel/runtime": "^7.12.5",
        "@testing-library/jest-dom": "^5.11.8",
        "@testing-library/react": "^11.2.2",
        "@types/jest": "^26.0.19",
        "@types/systemjs": "^6.1.0",
        "autoprefixer": "^10.2.1",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^26.6.3",
        "babel-loader": "^8.2.2",
        "clean-webpack-plugin": "^3.0.0",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.3",
        "css-loader": "^5.0.1",
        "eslint": "^7.17.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.3.0",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "html-webpack-plugin": "^4.5.1",
        "husky": "^4.3.6",
        "jest": "^26.6.3",
        "jest-cli": "^26.6.3",
        "lodash": "^4.17.20",
        "postcss": "^8.2.4",
        "postcss-loader": "^4.1.0",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0",
        "sass": "^1.32.2",
        "sass-loader": "^10.1.1",
        "style-loader": "^2.0.0",
        "systemjs-webpack-interop": "^2.3.4",
        "webpack": "^5.12.3",
        "webpack-bundle-analyzer": "^4.3.0",
        "webpack-cli": "^4.3.1"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.5.0",
        "prop-types": "^15.7.2",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-redux": "^7.2.2",
        "redux": "^4.0.5",
        "reselect": "^4.0.0",
        "single-spa-react": "^3.2.0"
    }
}
