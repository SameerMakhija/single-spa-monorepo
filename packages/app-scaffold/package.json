{
    "name": "@publicis-sapient/app-scaffold",
    "scripts": {
        "start:client": "webpack-dev-serve --config=webpack.client.config.js",
        "start:client:standalone": "webpack-dev-server --config=webpack.client.config.js --env.standalone",
        "build:client": "webpack --config=webpack.client.config.js --mode=production",
        "analyze:client": "webpack --config=webpack.client.config.js --mode=production --env.analyze=true",
        "start:server": "cross-env BABEL_ENV=node webpack --config=webpack.client.config.js",
        "build:server": "cross-env BABEL_ENV=node webpack --config=webpack.server.config.js --mode=production",
        "lint": "eslint src --ext js --ext jsx",
        "format": "prettier --write \"./**\"",
        "test": "cross-env BABEL_ENV=test jest",
        "watch-tests": "cross-env BABEL_ENV=test jest --watch",
        "coverage": "cross-env BABEL_ENV=test jest --coverage",
        "clean": "del-cli dist src/coverage",
        "build": "yarn clean && concurrently yarn:build:*"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && concurrently yarn:test yarn:lint"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.7.5",
        "@babel/plugin-transform-runtime": "^7.8.3",
        "@babel/preset-env": "^7.7.6",
        "@babel/preset-react": "^7.7.4",
        "@babel/runtime": "^7.8.7",
        "@testing-library/jest-dom": "^5.11.6",
        "@testing-library/react": "^11.2.2",
        "@types/jest": "^25.2.1",
        "@types/systemjs": "^6.1.0",
        "babel-eslint": "^11.0.0-beta.2",
        "babel-jest": "^24.9.0",
        "babel-plugin-dynamic-import-node": "^2.3.3",
        "concurrently": "^5.0.1",
        "cross-env": "^7.0.2",
        "del-cli": "^3.0.1",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-config-react-important-stuff": "^2.0.0",
        "eslint-plugin-prettier": "^3.1.1",
        "husky": "^3.1.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^25.2.7",
        "jest-cli": "^25.2.7",
        "postcss": "^8.2.4",
        "prettier": "^2.0.4",
        "pretty-quick": "^2.0.1",
        "single-spa-react": "^2.14.0",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10",
        "webpack-config-single-spa-react": "^1.0.3",
        "webpack-dev-server": "^3.9.0",
        "webpack-merge": "^4.2.2"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.5.0",
        "autoprefixer": "^10.2.1",
        "node-sass": "^5.0.0",
        "postcss-loader": "^4.1.0",
        "prop-types": "^15.7.2",
        "pubsub-js": "^1.9.2",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-redux": "^7.2.2",
        "redux": "^4.0.5",
        "reselect": "^4.0.0",
        "sass-loader": "^10.1.1"
    }
}
